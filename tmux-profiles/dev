# Select the primary pane (0)
selectp -t 0

# Split horizontally with a smaller side pane
split-window -h -p 33 -c '#{pane_current_path}'
 
# Select the new pane (1)
selectp -t 1 

# Split side pane vertically
split-window -v -p 50 -c '#{pane_current_path}'

# Go back to the first pane and start vim
selectp -t 0
send-keys "vim" C-m
