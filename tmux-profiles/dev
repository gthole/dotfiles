# Don't auto-rename the window anymore, as we're committing to this dir
set-option allow-rename off

# Select the primary pane (0)
selectp -t 0

# Auto window naming (not quite ready yet)
# rename-window "`echo ${PWD##*/}| perl -pe 's/-|_/ /g' | perl -pe 's/\S+/\u$&/g'`"

# Split horizontally with a smaller side pane
split-window -h -p 33 -c '#{pane_current_path}'
 
# Select the new pane (1)
selectp -t 1 

# Split side pane vertically
split-window -v -p 50 -c '#{pane_current_path}'

# Go back to the first pane and start vim
selectp -t 0
send-keys "vim" C-m
